<?xml version="1.0"?>
<ruleset name="CodingStandard PHPCS">
    <description>Quality Tools PHPCS ruleset.</description>

	<!-- Run Symfony ruleset -->
    <rule ref="Symfony">
        <exclude name="Symfony.Commenting.Annotations.Invalid" />
        <exclude name="Symfony.Commenting.ClassComment.Blacklisted" />
        <exclude name="Symfony.Commenting.License.Warning" />
    </rule>
	
	<!-- Run against the PHPCompatibility ruleset -->
    <rule ref="PHPCompatibility"/>
</ruleset>
